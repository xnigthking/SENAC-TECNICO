import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        String[] produtos = {"X-Burguer", "X-Salada", "X-Bacon", "Batata Frita", "Refrigerante Lata", "Suco Natural", "Água Mineral"};
        double[] precos = {10.0, 12.0, 14.0, 8.0, 5.0, 6.0, 3.0};
        int[] quantidades = new int[7];

        System.out.println("=== Menu da Lanchonete ===");
        for (int i = 0; i < produtos.length; i++) {
            System.out.println((i + 1) + ". " + produtos[i] + " - R$ " + precos[i]);
        }

        System.out.println("\nInforme a quantidade desejada para cada produto:");

        for (int i = 0; i < produtos.length; i++) {
            System.out.print("Quantidade de " + produtos[i] + ": ");
            quantidades[i] = scanner.nextInt();
        }

        System.out.println("\n=== Relatório do Pedido ===");
        double totalGeral = 0;
        boolean algumPedido = false;

        for (int i = 0; i < produtos.length; i++) {
            if (quantidades[i] > 0) {
                double subtotal = precos[i] * quantidades[i];
                System.out.println(produtos[i] + " - Quantidade: " + quantidades[i] + " - Subtotal: R$ " + subtotal);
                totalGeral += subtotal;
                algumPedido = true;
            }
        }

        if (!algumPedido) {
            System.out.println("Nenhum produto foi selecionado.");
        } else {
            System.out.println("Valor Total do Pedido: R$ " + totalGeral);
        }

        scanner.close();
    }
}
