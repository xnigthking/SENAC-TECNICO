package aula16exercicio_04_08_2025;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        String[] produtos = new String[7];
        double[] precos = new double[7];
        int[] quantidades = new int[7];
        double[] subtotal = new double[7];

        // Definindo produtos e preços fixos
        produtos[0] = "X-Burguer";
        precos[0] = 10.0;

        produtos[1] = "X-Salada";
        precos[1] = 12.0;

        produtos[2] = "X-Bacon";
        precos[2] = 14.0;

        produtos[3] = "Batata Frita";
        precos[3] = 8.0;

        produtos[4] = "Refrigerante Lata";
        precos[4] = 5.0;

        produtos[5] = "Suco Natural";
        precos[5] = 6.0;

        produtos[6] = "Água Mineral";
        precos[6] = 3.0;

        System.out.println("=== Cardápio da Lanchonete ===");

        for (int i = 0; i < produtos.length; i++) {
            System.out.println((i + 1) + ". " + produtos[i] + " - R$ " + precos[i]);
        }

        System.out.println("\nInforme a quantidade desejada para cada produto:");

        for (int i = 0; i < produtos.length; i++) {
            System.out.print("Quantidade de " + produtos[i] + ": ");
            quantidades[i] = scanner.nextInt();

            subtotal[i] = precos[i] * quantidades[i];

            System.out.println("Subtotal de " + produtos[i] + ": R$ " + subtotal[i]);
        }

        System.out.println("\n=== Relatório Final do Pedido ===");

        double totalGeral = 0;
        for (int i = 0; i < produtos.length; i++) {
            if (quantidades[i] > 0) {
                System.out.println(produtos[i] + " - Quantidade: " + quantidades[i] + " - Subtotal: R$ " + subtotal[i]);
                totalGeral += subtotal[i];
            }
        }

        System.out.println("Valor total do pedido: R$ " + totalGeral);

        scanner.close();
    }
}
